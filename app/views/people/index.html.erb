<h1 class="display-4 text-primary">People#index</h1>
<p><%= @msg%></p>
<p><a href="/people/find">Search profile<a></p>

<table class="table">
    <tr>
        <th>Id</th><th>Name</th>
    </tr>
    
    <% @data.each do |obj| %>
    <tr>
        <td><%= obj.id %></td>
        <td><a href="/people/<%= obj.id %>"><%= obj.name %></a></td>
        <td><a href="/people/edit/<%= obj.id %>">Edit</a>
        &nbsp;&nbsp;<a href ="javascript:delData(<%= obj.id%>);">Delete</a></td>
        
    </tr>
    <% end %>
    <tr><th><a href="/people/add">Add more<a></th></tr>
    
</table>

<script>
function delData(num){
    if(confirm("このデータを本当に削除しますか？")){
        document.location="/people/delete/"+num;
    };
}
</script>
